

<div class="center-products">
  <h1>Listing Products</h1>
</div>
<hr>
<div class="right">
  <%= link_to 'Add a new product', new_product_path, class: "btn btn-secondary btn-lg active" %>
</div>
</br>
<div class="center">
  <div class="row">
    <% @products.each do |product| %>
        <div class="col-md-3">
          <div class="thumbnail">
            <%= link_to image_tag(product.image.medium.url), product %>
            <div class="caption">
              <h3><%= product.name %></h3>
              <p><%= number_to_currency(product.price, :unit => "â‚¬") %></p>
              <p><%="Sold by #{product.user.username}" %></p>
                <%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary" %>
                <%= link_to 'Remove', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
